<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveStuff.MainPage">

   <StackLayout Padding="20,20">
       <Label Text="Enter User Name"/>
       <Border Stroke="gray" StrokeThickness="1" Margin="0,15,0,80">
            <Entry x:Name="TxtUser"/>
       </Border>
       <Button Text="Save Settings" Clicked="Save_OnClicked"/>
       <Button Text="Read Settings" Clicked="Read_OnClicked" Margin="0,20"/>
       <Button Text="Clear Settings" Clicked="Clear_OnClicked"/>
       
   </StackLayout>

</ContentPage>
